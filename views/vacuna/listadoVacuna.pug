extends ../__layout/main

block content
  .container.mt-4
    h1.mb-4  Listado de Vacunas

    //- Bot贸n de nuevo vacuna
    a.btn.btn-primary.mb-3(href='/nuevavacuna')
      i.bi.bi-plus-circle.me-2
      | Nueva Vacuna

    //- Tabla responsive
    .table-responsive
      table.table.table-striped.table-hover.align-middle
        thead.table-dark
          tr
            th(scope='col') N掳 Lote
            th(scope='col') Laboratorio
            th(scope='col') Tipo
            th(scope='col') Nombre Comercial
            th(scope='col') Fecha de Compra
            th(scope='col') Fecha de Fabricaci贸n
            th(scope='col') Fecha de Vencimiento
            th(scope='col') Estado
            th(scope='col' style='width: 150px') Acciones
        tbody
          each vacuna in vacunas
            tr
              td= vacuna.lote.num_lote
              td= vacuna.lote.laboratorio.nombre
              td= vacuna.tipo
              td= vacuna.nombre_comercial
              td= vacuna.lote.fecha_compra
              td= vacuna.lote.fecha_fab
              td= vacuna.lote.fecha_venc
              td= vacuna.estado.nombre
              td
                .d-flex.gap-2
                  a.btn.btn-sm.btn-outline-primary.editar-vacuna(data-id=vacuna.id)
                    i.bi.bi-pencil
                  button.btn.btn-sm.btn-outline-danger.borrar-vacuna(
                    data-id=vacuna.id
                  )
                    i.bi.bi-trash

    //- Controles de paginaci贸n
    if pagination.totalPages > 1
      nav(aria-label='Paginaci贸n de vacunas')
        ul.pagination.justify-content-center
          li.page-item(class=pagination.currentPage === 1 ? 'disabled' : '')
            a.page-link(
              href=`/vacunas?page=${pagination.currentPage - 1}`
              aria-label='Anterior'
            )
              span(aria-hidden='true') &laquo;
              span.sr-only Anterior
          
          //- Rango de p谩ginas (m谩ximo 5 visibles)
          - let startPage = Math.max(1, pagination.currentPage - 2)
          - let endPage = Math.min(pagination.totalPages, pagination.currentPage + 2)
          
          if startPage > 1
            li.page-item
              a.page-link(href=`/vacunas?page=1`) 1
            li.page-item.disabled
              span.page-link ...
          each pageNum in Array(endPage - startPage + 1).fill().map((_, i) => startPage + i)
            li.page-item(class=pageNum === pagination.currentPage ? 'active' : '')
              a.page-link(href=`/vacunas?page=${pageNum}`)= pageNum
          
          if endPage < pagination.totalPages
            li.page-item.disabled
              span.page-link ...
            li.page-item
              a.page-link(href=`/vacunas?page=${pagination.totalPages}`)= pagination.totalPages
          
          li.page-item(class=pagination.currentPage === pagination.totalPages ? 'disabled' : '')
            a.page-link(
              href=`/vacunas?page=${pagination.currentPage + 1}`
              aria-label='Siguiente'
            )
              span(aria-hidden='true') &raquo;
              span.sr-only Siguiente

  script(src="/js/vacuna/listadoVacuna.js")