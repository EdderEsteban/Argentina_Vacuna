extends ../__layout/main

block content
  .container.mt-4
    h1.mb-4 ðŸ§ª Listado de Laboratorios

    //- BotÃ³n de nuevo laboratorio
    a.btn.btn-primary(href='/nuevolaboratorio')
      i.bi.bi-plus-circle.me-2
      | Nuevo Laboratorio

    //- Tabla responsive
    .table-responsive
      table.table.table-striped.table-hover.align-middle.mt-3
        thead.table-dark
          tr
            th(scope='col') Nombre
            th(scope='col') Nacionalidad
            th(scope='col' style='width: 150px') Acciones
        tbody
          each laboratorio in laboratorios
            tr
              td= laboratorio.nombre
              td= laboratorio.nacionalidad
              td
                .d-flex.gap-2
                  a.btn.btn-sm.btn-outline-primary.editar-laboratorio(data-id=laboratorio.id)
                    i.bi.bi-pencil
                  button.btn.btn-sm.btn-outline-danger.borrar-laboratorio(data-id=laboratorio.id)
                    i.bi.bi-trash

  script(src="/js/laboratorio/listadoLaboratorio.js")
