extends ../__layout/main

block content
  .container.mt-4
    h1.mb-4 ğŸ‘¤ Listado de Usuarios

    //- BotÃ³n nuevo usuario
    a#btnNuevoUsuario.btn.btn-primary.mb-3
      i.bi.bi-plus-circle.me-2
      | Nuevo Usuario

    .table-responsive
      table.table.table-striped.table-hover.align-middle
        thead.table-dark
          tr
            th(scope='col') Nombre
            th(scope='col') Apellido
            th(scope='col') DNI
            th(scope='col') Usuario
            th(scope='col') Acciones
        tbody
          each user in usuarios
            tr
              td= user.nombre
              td= user.apellido
              td= user.dni
              td= user.usuario
              td
                .d-flex.gap-2
                  a.btn.btn-sm.btn-outline-primary.editar-usuario(data-id=user.id)
                    i.bi.bi-pencil
                  button.btn.btn-sm.btn-outline-danger.borrar-usuario(data-id=user.id)
                    i.bi.bi-trash

    //- PaginaciÃ³n
    if pagination.totalPages > 1
      nav(aria-label='PaginaciÃ³n de usuarios')
        ul.pagination.justify-content-center
          li.page-item(class=pagination.currentPage === 1 ? 'disabled' : '')
            a.page-link(href=`/usuario?page=${pagination.currentPage - 1}`) &laquo;
          - let startPage = Math.max(1, pagination.currentPage - 2)
          - let endPage = Math.min(pagination.totalPages, pagination.currentPage + 2)
          if startPage > 1
            li.page-item
              a.page-link(href=`/usuario?page=1`) 1
            li.page-item.disabled
              span.page-link ...
          each pageNum in Array(endPage - startPage + 1).fill().map((_, i) => startPage + i)
            li.page-item(class=pageNum === pagination.currentPage ? 'active' : '')
              a.page-link(href=`/usuario?page=${pageNum}`)= pageNum
          if endPage < pagination.totalPages
            li.page-item.disabled
              span.page-link ...
            li.page-item
              a.page-link(href=`/usuario?page=${pagination.totalPages}`)= pagination.totalPages
          li.page-item(class=pagination.currentPage === pagination.totalPages ? 'disabled' : '')
            a.page-link(href=`/usuario?page=${pagination.currentPage + 1}`) &raquo;

  script(src="/js/usuario/listadoUsuario.js")